{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "max-len": ["error", { "code": 120, "tabWidth": 2 }],
    "object-curly-spacing": ["error", "always"],
    "no-warning-comments": [
      "error",
      {
        "terms": [ "todo", "fixme"],
        "location": "start"
      }
    ]
  }
}
